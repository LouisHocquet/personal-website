<div class="section projects">
  <a class="anchor" id="projects"></a>
  <h2>Projets</h2>
  <div class="project-cards">

    <div class="project-card project-card-active">
      <div class="card-title">
        <h3>Wattivet</h3>
        <i class="fa-solid fa-arrow-right"></i>
      </div>
      <%= cl_image_tag("louishocquet/wattivet_desktop_thumbnail",
      class: "card-image") %>
      <div class="card-mobile-thumbnail">
        <div class="nudge">
          <div class="nudge-shape"></div>
        </div>
        <%= cl_image_tag("louishocquet/wattivet_mobile_thumbnail") %>
      </div>
      <%= link_to "", wattivet_detail_path, target: :blank, class: "card-link" %>
    </div>

    <div class="project-card">
      <div class="card-title">
        <h3>Randomize</h3>
      </div>
      <div class="card-empty-message">
        <i class="fa-solid fa-person-digging"></i>
        <p><strong>En construction</strong></p>
        <p>Randomize proposera des activités de dernière minute aléatoires pour
          favoriser la découverte de nouveaux concepts et les rencontres !
        </p>
      </div>
    </div>

    <div class="project-card">
      <div class="card-title">
        <h3>Un projet à réaliser ?</h3>
      </div>
      <div class="card-empty-message">
        <i class="fa-solid fa-bolt"></i>
        <p><strong>Dites-m'en plus</strong></p>
        <p>
          Site internet, application web,
          ecommerce... Je peux sûrement vous aider !
        </p>
        <%= link_to anchor: :contact do %>
          <button type="button" class="btn btn-primary px-4 py-3 rounded-3">
            Me contacter
          </button>
        <% end %>
      </div>
    </div>

  </div>
</div>
