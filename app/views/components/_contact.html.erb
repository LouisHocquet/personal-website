<div class="section contact">
  <a class="anchor" id="contact"></a>
  <h2>Contact</h2>
  <div class="contact-links">
    <div class="contact-link">
      <%= link_to "mailto:louis.hocquet@sfr.fr", class: "contact-icon" do %>
        <i class="fa-solid fa-envelope"></i>
      <% end %>
      <%= link_to "mailto:hello@louishocquet.com", class: "contact-text" do %>
        <p>Par email</p>
      <% end %>
    </div>
    <p> ou </p>
    <div class="contact-link">
      <%= link_to "https://www.linkedin.com/in/louis-hocquet/", class: "contact-icon" do %>
        <i class="fa-brands fa-linkedin"></i>
      <% end %>
      <%= link_to "https://www.linkedin.com/in/louis-hocquet/", class: "contact-text" do %>
        <p>Sur Linkedin</p>
      <% end %>
    </div>
  </div>

  <div class="contact-form">
  <%= form_for(@contact, remote: true)  do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "name", class: "form-control"%>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="form-group <%= @email_errors ? 'form-group-error' : '' %>">
          <%= f.text_field :email, placeholder: "email", class: "form-control" %>
          <% if @email_errors %>
            <span class="form-error-message"><%= @email_errors.first %></span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group <%= @message_errors ? 'form-group-error' : '' %>">
      <%= f.text_area :message, placeholder: "message", class: "form-control" %>
        <% if @message_errors %>
          <span class="form-error-message"><%= @message_errors.first %></span>
        <% end %>
    </div>
    <div class="actions">
      <%= f.submit "SEND", class: "ren-btn" %>
    </div>
  <% end %>
</div>
