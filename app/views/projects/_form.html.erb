<%= simple_form_for(@project) do |f| %>
  <%= f.input :name %>
  <%= f.input :url %>
  <%=
    f.input :expertise_ids,
    label: 'Expertises',
    collection: @expertises,
    include_hidden: false,
    include_blank: false,
    input_html: { multiple: true}
    # input_html: { multiple: true }
  %>
  <%= f.label :context, class: "mb-4" %>
  <%= f.rich_text_area :context %>
  <%= f.label :mission, class: "mb-4 mt-3" %>
  <%= f.rich_text_area :mission %>
  <%= f.label :highlight, class: "mb-4 mt-3" %>
  <%= f.rich_text_area :highlight, class: "mb-3" %>
  <%= f.input :cover_photo, as: :file %>
  <%= f.input :cover_photo_mobile, as: :file %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: "btn btn-primary px-3 py-2 rounded-3" %>
<% end %>
